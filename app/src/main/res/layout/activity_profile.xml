<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.ProfileActivity"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    >
    <!-- LOGO -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:layout_marginTop="35dp"

        android:contentDescription="@string/White_logo"
        android:src="@drawable/logo_white"

        android:visibility="visible"
        android:layout_gravity="center"
        />
    <!-- PROFILBILDE -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setProfilePic"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:contentDescription="@string/Edit_image"
        android:src="@drawable/eddiemunch"
        android:layout_gravity="center"
   />
    <!-- BRUKERNAVN -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/anton"
        android:text="EddieMunch"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:paddingTop="10dp"
        tools:layout_editor_absoluteY="309dp"
        android:layout_gravity="center"
        />
    <!-- ALDER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ageDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/alumni_sans"
            android:text="@string/age"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"


            tools:layout_editor_absoluteY="400dp"/>


        <!-- VALGT ALDER -->
        <TextView
            android:id="@+id/chosenAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/alumni_sans"
            android:text="@string/_22"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            tools:layout_editor_absoluteY="400dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="664dp"
        tools:visibility="visible"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- VALGT EMAIL -->
        <TextView
            android:id="@+id/emailDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/alumni_sans"
            android:text="Email:"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"

            tools:layout_editor_absoluteY="452dp"
            android:layout_marginTop="10dp"
            />

        <!-- LINJE -->
        <TextView
            android:id="@+id/chosenEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/alumni_sans"
            android:text="@string/edvard_munch_no"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="452dp" />
    </LinearLayout>
    <!-- EMAIL -->
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="438dp"
        tools:visibility="visible"
        android:layout_marginBottom="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nationalityDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="Nationality:"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"

            tools:layout_editor_absoluteY="514dp" />

        <!-- VALGT NASJONALITET -->
        <TextView
            android:id="@+id/chosenNationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="Norwegian"
            android:textColor="#FFFFFF"
            android:textSize="32sp"


            tools:layout_editor_absoluteY="514dp" />
    </LinearLayout>
    <!-- NASJONALITET -->


    <!-- LINJE -->
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="561dp"
        tools:visibility="visible"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- KJØNN -->
        <TextView
            android:id="@+id/genderDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="Gender:"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"


            tools:layout_editor_absoluteY="570dp" />

        <!-- VALGT KJØNN -->
        <TextView
            android:id="@+id/chosenGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="Male"
            android:textColor="#FFFFFF"
            android:textSize="32sp"


            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>


    <!-- LINJE -->
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="616dp"
        tools:visibility="visible"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- BURSDAG -->
        <TextView
            android:id="@+id/birthdayDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="Birthday:"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"


            tools:layout_editor_absoluteY="617dp" />

        <!-- VALGT BURSDAG -->
        <TextView
            android:id="@+id/chosenBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_sans"
            android:text="12. Decenber 1863"
            android:textColor="#FFFFFF"
            android:textSize="32sp"


            tools:layout_editor_absoluteY="617dp" />

    </LinearLayout>


    <!-- LINJE -->
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="664dp"
        tools:visibility="visible" />

</LinearLayout>