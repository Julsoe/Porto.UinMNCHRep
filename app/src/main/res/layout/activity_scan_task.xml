<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Activities.InterpretTaskActivity" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/btnRewards"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/rewards"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/description_rewards" />

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:fontFamily="@font/alumni_extra_bold"
            android:textColor="@color/pink"
            android:textSize="70sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.17" />

        <TextView
            android:id="@+id/tvTaskSubtitle"
            android:layout_width="244dp"
            android:layout_height="43dp"

            android:text=""
            android:fontFamily="@font/alumni_regular"
            android:textColor="@color/pink"
            android:textSize="30sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.159"
            app:layout_constraintHorizontal_bias="0.299" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="35dp"

            android:text="@string/floor"
            android:fontFamily="@font/alumni_semi_bold"
            android:textColor="@color/gray"
            android:textSize="25sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155"
            app:layout_constraintHorizontal_bias="0.888" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="346dp"
            android:layout_height="186dp"

            android:background="@drawable/speech_detective"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.401" />

        <TextView
            android:id="@+id/textView_speech"
            android:layout_width="339dp"
            android:layout_height="188dp"

            android:background="@drawable/speech_detective"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.822" />

        <TextView
            android:id="@+id/tvTaskContent1"
            android:layout_width="306dp"

            android:layout_height="wrap_content"
            android:fontFamily="@font/alumni_regular"
            android:text=""
            android:textColor="@color/gray"

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.418" />

        <TextView
            android:id="@+id/tvTaskContent2"
            android:layout_width="294dp"
            android:layout_height="147dp"

            android:fontFamily="@font/alumni_regular"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.808" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/detective"

            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="52dp"
            android:layout_height="52dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="420dp"
            android:src="@drawable/detective"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/cipher_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <EditText
                android:id="@+id/hintA"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="A"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />
            <EditText
                android:id="@+id/hintI"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="I"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:showDividers="middle"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />

            <EditText
                android:id="@+id/hintB"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="B"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />

            <EditText
                android:id="@+id/hintG"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="G"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/camera"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976"
            app:layout_constraintWidth_percent="0.8" />

        <ImageView
            android:id="@+id/ivStoredImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="702dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>