<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".DetektivenActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/rewards"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/description_rewards" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/txt_gaaten"
            android:fontFamily="@font/alumni_extra_bold"
            android:textColor="@color/pink"
            android:textSize="70sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.17" />

        <TextView
            android:layout_width="244dp"
            android:layout_height="43dp"

            android:text="@string/game_name"
            android:fontFamily="@font/alumni_regular"
            android:textColor="@color/pink"
            android:textSize="30sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.159"
            app:layout_constraintHorizontal_bias="0.299" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="35dp"

            android:text="@string/floor"
            android:fontFamily="@font/alumni_semi_bold"
            android:textColor="@color/gray"
            android:textSize="25sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155"
            app:layout_constraintHorizontal_bias="0.888" />


        <TextView
            android:id="@+id/speech_detective"
            android:layout_width="345dp"
            android:layout_height="222dp"
            android:background="@drawable/speech_detective"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448" />

        <TextView
            android:layout_width="303dp"
            android:layout_height="176dp"

            android:text="@string/speech_gaaten1"
            android:fontFamily="@font/alumni_regular"
            android:textColor="@color/gray"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454"
            app:layout_constraintHorizontal_bias="0.666" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/detective"

            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="47dp"
            android:layout_marginTop="504dp"
            android:divider="@drawable/horizontal_divider"
            android:dividerPadding="12dip"

            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.648"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.912">



            <LinearLayout
                android:id="@+id/cipher_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/hintA"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_margin="2dp"

                    android:fontFamily="@font/alumni_medium"
                    android:hint="A"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"

                    android:paddingBottom="10dp"
                    android:textColorHint="@color/blue"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.182"
                    app:layout_constraintWidth_percent=".8" />
            <EditText
                android:id="@+id/hintI"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="I"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:showDividers="middle"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />

            <EditText
                android:id="@+id/hintB"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="B"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />

            <EditText
                android:id="@+id/hintG"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"

                android:fontFamily="@font/alumni_medium"
                android:hint="G"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:textColorHint="@color/blue"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.182"
                app:layout_constraintWidth_percent=".8" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/camera"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.93"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>