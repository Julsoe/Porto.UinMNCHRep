<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/blue_light"
            android:fontFamily="@font/alumni_medium"
            android:hint="Name"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/blue_light"
            android:fontFamily="@font/alumni_medium"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/pass_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/blue_light"
            android:fontFamily="@font/alumni_medium"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/blue_light"
            android:fontFamily="@font/alumni_medium"
            android:hint="Date of birth YYYY-MM-DD"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/gray"
            android:textSize="25sp" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue_dark"
            android:fontFamily="@font/alumni_extra_bold"
            android:text="REGISTER"
            android:textColor="@color/red_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alumni_regular"
            android:text="or"
            android:textColor="@color/gray_dark"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/dividerL"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/dividerR"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_dark" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_google_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/gray"
                android:elevation="35dp"
                app:tint="@null"
                android:src="@drawable/google_logo" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_fb_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/gray"
                android:elevation="35dp"
                app:tint="@null"
                android:src="@drawable/facebook_logo" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_apple_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:elevation="35dp"
                app:tint="@null"
                android:src="@drawable/apple_logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumni_regular"
            android:text="By pressing Login, you accept our terms of service. Learn more about how we process your data in our privacy policy and cookie policy."
            android:textColor="@color/gray_dark"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
